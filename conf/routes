# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Searching Feature
GET     /link                       controllers.SearchController.retrieveLinks(id: Option[String] ?= None)
GET     /link                       controllers.SearchController.retrieveLinks(date: Option[String] ?= None, id: Option[String] ?= None)

GET     /enterprise                 controllers.SearchController.retrieveEnterprise(id: Option[String] ?= None)
GET     /enterprise                 controllers.SearchController.retrieveEnterprise(date: Option[String] ?= None, id: Option[String] ?= None)

GET     /                           controllers.HomeController.status
OPTIONS /*all                       controllers.HomeController.preflight(all: String)

# Route for deployed version information (in JSON).
GET     /version                    controllers.VersionController.version

# build dates
# GET   /latest                    controllers.v1.LastUpdateController.latestListings

# Route for health check information (in JSON).
GET     /health                     controllers.HealthController.health

# api documentation
GET     /swagger.json              controllers.ApiHelpController.getResources
GET     /docs                      controllers.HomeController.swagger


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
